# =============================================================================
# Django Backend Environment Configuration
# =============================================================================
# Copy this file to .env and customize for your environment

# =============================================================================
# DJANGO CORE SETTINGS
# =============================================================================
SECRET_KEY=django-insecure-CHANGE-THIS-TO-RANDOM-50-CHARS-IN-PRODUCTION
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# =============================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# =============================================================================
DB_NAME=crm_database
DB_USER=crm_user
DB_PASSWORD=crm_password_change_this
DB_HOST=localhost
DB_PORT=5432
DB_CONN_MAX_AGE=600

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ALLOW_ALL_ORIGINS=True
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://localhost:3000

# =============================================================================
# PRODUCTION NOTES
# =============================================================================
# 1. Generate SECRET_KEY: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
# 2. Set DEBUG=False in production
# 3. Update ALLOWED_HOSTS with your domain
# 4. Use strong DB_PASSWORD
# 5. Set REDIS_PASSWORD for production
# 6. Configure CORS_ALLOWED_ORIGINS with actual frontend domain
